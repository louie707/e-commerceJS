<%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <header class="main-header">
        <%- include('../includes/nav')%>
    </header>

    <main>
        <div class="grid">
            <% if(prod.length > 0) { %>
                <% for (let item of prod) {%>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= item.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price"><%= item.price %></h2>
                        <p class="product__description"><%= item.description %></p>
                    </div>
                    <div class="card__actions">
                        <%- include("../includes/add-to-cart", {product: item}) %>
                    </div>
                </article>
                <% } %>
            <% } else { %>
                <h1>No Product Added</h1>
            <% } %>
        </div>
    </main>
</body>

</html>